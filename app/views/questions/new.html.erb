<div class="container">
  <h2 class="title-lg mb">Новый вопрос</h2>

  <%= form_with model: @question do |form| %>
    <p class="mt"><%= form.label :user_id %></p>
    <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>
    <p><%= form.label :user_id %></p>
    <p><%= form.number_field :user_id, class: 'form-text-field' %></p>
    <div class="mt">
      <%= form.submit 'Создать', class: 'button button-main' %>
      <%= link_to 'Вернуться', :back, class: 'button button-main'%></p>
    </div>
  <% end %>
</div>