<div class="container mt-sm">
  <p class="mt">
    <%= link_to "Создать новый вопрос/CREATE A NEW QUESTION", new_question_path, class: 'button button-main' %>
  </p>
   <p class="mt">
     <%= render 'form', question: @question %>
   </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос/QUESTION',
                    'вопроса/QUESTIONS', 'вопросов/QUESTIONS') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <%= render question %>
  </div>
<% end %>
