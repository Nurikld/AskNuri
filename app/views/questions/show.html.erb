<div class="container">
  <h2 class="title-lg mb <%= 'hidden' if @question.hidden %>">Вопрос</h2>

  <p class="mb-sm <%= 'hidden' if @question.hidden %>"><%= @question.body %></p>
  <p>user_id: <b><%= @question.user_id %></b></p>

  <div class="mt">
    <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Изменить вопрос' %>
    <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete,
                  title: 'Удалить вопрос', form: {data: {turbo_confirm: 'Точно удалить вопрос?'}} %>
    <% unless @question.hidden? %>
      <%= button_to fa_icon('eye'), hide_question_path(@question.id), method: :put, title: 'Скрыть вопрос' %>
    <% end %>
  </div>
  <p class="mt"><%= link_to 'Все вопросы', questions_path %></p>
</div>
