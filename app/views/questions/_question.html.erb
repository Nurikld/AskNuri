<div class="mb-sm">
<%= question.body %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>

  <div>
    <%= link_to fa_icon('pencil'), edit_question_path(question),
                title: 'Изменить вопрос/EDIT' %>
    <%= button_to fa_icon('trash-o'), question_path(question),
                  method: :delete, title: 'Удалить вопрос/DELETE',
                  form: {data: {turbo_confirm: 'Точно удалить вопрос?/ARE YOU SURE?'}} %>
    <% unless question.hidden? %>
      <%= button_to fa_icon('eye'), hide_question_path(question.id),
                    method: :put, title: 'Скрыть вопрос/HIDE' %>
    <% end %>
  </div>
</div>
